<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        app:riv_oval="true"
        android:src="@drawable/ic_launcher_background"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:id="@+id/Chat_Customrv_iv_user"
        android:padding="@dimen/_5sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="25"
        android:layout_toEndOf="@id/Chat_Customrv_iv_user"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:text="Ahmed Abdelghafoor"
        android:textColor="@color/black"
        android:textDirection="locale"
        android:id="@+id/Chat_Customrv_tv_username"
        android:layout_toStartOf="@id/Chat_Customrv_tv_msgDate"
        />
    <ImageView
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_toStartOf="@id/Chat_Customrv_tv_lastmsg"
        android:layout_below="@id/Chat_Customrv_tv_username"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        android:id="@+id/Chat_Customrv_iv_msgState"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="23"
        android:layout_toEndOf="@id/Chat_Customrv_iv_user"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_11ssp"
        android:text="Ahmed: hello"
        android:textDirection="locale"
        android:textColor="#222222"
        android:layout_below="@id/Chat_Customrv_tv_username"
        android:id="@+id/Chat_Customrv_tv_lastmsg"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/Chat_Customrv_tv_lastmsg"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_toEndOf="@id/Chat_Customrv_iv_user"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/Chat_Customrv_tv_msgDate"
        android:text="Yesterday"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_8ssp"
        android:textColor="#252525"
        />
    <TextView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@drawable/number_of_msgs"
        android:text="1"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/Chat_Customrv_tv_msgDate"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:id="@+id/Chat_Customrv_tv_msgNumber"
        />
</RelativeLayout>